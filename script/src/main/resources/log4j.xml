<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- For layout pattern, see doc at http://jakarta.apache.org/log4j/docs/api/org/apache/log4j/PatternLayout.html -->

		<!-- The console appender (will output in catalina.out when used in Tomcat) -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} %x - %m%n" />
		</layout>
		<filter class="org.talend.colibri.execution.log.MyLogFilter"/>
	</appender>
	
	<appender name="MyFileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/tmp/default.log" />
		<param name="Append" value="false" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} %x - %m%n" />
		</layout>
		<filter class="org.talend.colibri.execution.log.MyLogFilter"/>
	</appender>

	<logger name="org.talend.colibri.files.ResourcesUtils" additivity="true"> <level value="info" /> </logger>
	
	<root>
		<priority value="debug" />
		<!-- Put here your appenders -->
		<!-- <appender-ref ref="STDOUT"/> -->
		<appender-ref ref="MyFileAppender"/>
	</root>

</log4j:configuration>
